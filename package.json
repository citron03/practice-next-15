{
  "private": true,
  "type": "module",
  "scripts": {
    "web": "pnpm --filter web",
    "web:dev": "pnpm run web dev",
    "ds": "pnpm run web --filter @citron03/design-system",
    "ds:dev": "pnpm run ds dev",
    "commit": "pnpm --filter scripts commit",
    "ready": "pnpm --filter scripts ready",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": "pnpm exec eslint --fix",
    "*.tsx": "pnpm exec eslint --fix",
    "*.js": "pnpm exec eslint --fix",
    "*.jsx": "pnpm exec eslint --fix",
    "*.{ts,tsx,js,jsx}": "pnpm exec prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "*",
    "@commitlint/config-conventional": "*",
    "@eslint/js": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "eslint-config-next": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-prettier": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-compiler": "*",
    "eslint-plugin-react-hooks": "*",
    "eslint-plugin-simple-import-sort": "*",
    "husky": "*",
    "lint-staged": "*",
    "prettier": "*",
    "stylelint": "*",
    "stylelint-config-prettier": "*",
    "stylelint-config-standard": "*"
  },
  "dependencies": {
    "react": "*",
    "react-dom": "*"
  }
}
